@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="agileits-top">
	<form asp-action="ForgetPassword" method="post">

		<input class="text email" asp-for="Email" placeholder="Email" required="">
		
		<input type="submit" value="Send Email">
	</form>
	<p>Don't You have an Account? <a asp-action="SignUp"> Register Now!</a></p>
</div>
@section validate {
	<partial name="_ValidationScriptsPartial"></partial>
}

