@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="Name" placeholder="Search By Role Name" />
        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

<h1>All Roles</h1>
<br />
<br />

<a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create New User</a>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R=>R.id)</th>
                <th>@Html.DisplayNameFor(R=>R.RoleName)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(R=>role.id)</td>
                   <td>@Html.DisplayFor(R=>role.RoleName)</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@role.id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@role.id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@role.id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Role</h3>
    </div>
}





