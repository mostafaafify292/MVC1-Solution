@model EmployeeViewModel

@{
    var departments = new SelectList(ViewData["departments"] as IEnumerable<Department>, nameof(Department.id), nameof(Department.Name));

 
}



<div asp-validation-summary="All"></div>
<div>
    <label asp-for="Name" class="col-form-label"></label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div>
    <label asp-for="Age" class="col-form-label"></label>
    <input type="text" asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div>
    <label asp-for="Address" class="col-form-label"></label>
    <input type="text" asp-for="Address" class="form-control" />
    @* <span asp-validation-for="Address" class="text-danger"></span> *@
</div>
<div>
    <label asp-for="Salary" class="col-form-label"></label>
    <input type="text" asp-for="Salary" class="form-control" />
</div>
<div>
    <label asp-for="IsActive" class="col-form-label"></label>
    <input asp-for="IsActive" class="form-control" />
</div>
<div>
    <label asp-for="Gender" class="col-form-label"></label>
    <input asp-for="Gender" class="form-control" />
</div>
<div>
    <label asp-for="Email" class="col-form-label"></label>
    <input type="text" asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div>
    <label asp-for="PhoneNumber" class="col-form-label"></label>
    <input type="text" asp-for="PhoneNumber" class="form-control" />
</div>
<div>
    <label asp-for="IsDeleted" class="col-form-label"></label>
    <input asp-for="IsDeleted" class="form-control" />
</div>
<div>
    <label asp-for="HireDate" class="col-form-label"></label>
    <input asp-for="HireDate" class="form-control" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="department"></label>
    <select class="form-control" asp-items="@departments" asp-for="DepartmentId" >
        <option value="null" >--Select Department--</option>
    </select>
</div>
<div>
    <label class="col-form-label" asp-for="Image"></label>
    <input class="form-control-file" asp-for="Image " />
</div>