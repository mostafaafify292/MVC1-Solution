

@model IEnumerable<Department>
    


<h1>All Departments</h1>
<br />
<br />

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Department</a>

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DataOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DataOfCreation</td>
                    <td>
                        <a  asp-action="Details" asp-route-id="@department.id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a  asp-action="Edit" asp-route-id="@department.id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a  asp-action="Delete" asp-route-id="@department.id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning" >
        <h3>There is no Department</h3>
    </div>
}


