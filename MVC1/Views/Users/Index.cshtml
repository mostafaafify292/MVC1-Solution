@model IEnumerable<userViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="email" class="form-control" name="email" placeholder="Search By Email" />
        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

<h1>All Users</h1>
<br />
<br />

<a asp-controller="Users" asp-action="Create" class="btn btn-primary">Create New User</a>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.FName)</th>
                <th>@Html.DisplayNameFor(D => D.LName)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(D => D.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => user.Id)</td>
                    <td>@Html.DisplayFor(M => user.FName)</td>
                    <td>@Html.DisplayFor(M => user.LName)</td>
                    <td>@Html.DisplayFor(M => user.Email)</td>
                    <td>@Html.DisplayFor(M => user.PhoneNumber)</td>
                    <td>@string.Join(" ",user.Roles)</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no users</h3>
    </div>
}





